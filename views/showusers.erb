<table class="table table-striped">
    <thead>
        <tr>
            <th>Имя</th>
            <th>Телефон</th>
            <th>Дата записи</th>
            <th>Бармен</th>
            <th>Цвет</th>
        </tr>
    </thead> 

    <tbody>
    <% @results.each do |row| %>
        <tr>
            <td><%= row['Name'] %></td>
            <td><%= row['Phone'] %></td>
            <td><%= row['DateTime'] %></td>
            <td><%= row['Barmen'] %></td>
            <td><%= row['Color'] %></td>
        </tr>
    <% end %>
  </tbody>
</table>